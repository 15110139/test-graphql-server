{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "rules": {
    "import/no-extraneous-dependencies": 1,
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "import/no-dynamic-require": 0,
    "class-methods-use-this": 0,
    "global-require": 0,
    "max-len": 0,
    "no-param-reassign": 0
  }
}
